{
  "compilerOptions": {
    "target": "es2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2021", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "incremental": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist", "tests", "./src/worker/"],
  "include": ["src/widget/**/*.ts"]
}
